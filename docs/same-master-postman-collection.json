{
  "info": {
    "name": "Same Master API Collection",
    "description": "Complete collection for testing Same Master API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "super_admin_token",
      "value": "",
      "type": "string"
    }
