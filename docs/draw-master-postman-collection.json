{
  "info": {
    "name": "DrawMaster API Collection",
    "description": "Complete collection for testing DrawMaster API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "super_admin_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get Super Admin Pre-Auth Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/super-admin/pre-auth-token",
              "host": ["{{base_url}}"],
              "path": ["api", "super-admin", "pre-auth-token"]
            }
          },
          "response": []
        },
        {
          "name": "Super Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('super_admin_token', response.token);",
                  "        console.log('Super Admin token saved:', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{pre_auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"superadmin@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/super-admin/login",
              "host": ["{{base_url}}"],
              "path": ["api", "super-admin", "login"]
            }
          },
          "response": []
        }
      ]
    },
