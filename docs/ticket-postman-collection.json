              {
                "key": "Authorization",
                "value": "Bearer {{user_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"item_code\": \"ITM-002\",\n  \"full_ticket_name\": \"Weekly Lottery Ticket\",\n  \"group_name\": \"Group B\",\n\n  \"draw_time\": \"15:00\",\n  \"draw_day\": \"Sunday\",\n  \"ticket_type\": \"Weekly\",\n  \"state_name\": \"Delhi\",\n  \"number_of_digits\": 6,\n  \"book_contains\": 200,\n  \"ticket_unique_id\": \"TKT-00002\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets",
